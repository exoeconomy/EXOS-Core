{
    "appId": "org.exos-core",
    "artifactName": "EXOS.Core-${version}-${os}-${arch}.${ext}",
    "productName": "EXOS Core",
    "afterSign": "./afterSignHook.js",
    "asar": true,
    "publish": [
        {
            "provider": "github",
            "owner": "FluidChains",
            "repo": "EXOS-Core"
        }
    ],
    "releaseInfo": {
        "releaseName": "${version}"
    },
    "files": [
        "dist/**",
        "main.js"
    ],
    "directories": {
        "output": "build"
    },
    "win": {
        "icon": "dist/assets/icon.ico",
        "target": [
            "nsis"
        ],
        "artifactName": "EXOS.Core-${version}-${os}-${env.arch}.${ext}"
    },
    "linux": {
        "icon": "dist/assets/images",
        "target": [
            "AppImage:x64"
        ],
        "synopsis": " ",
        "category": "Utility"
    },
    "mac": {
        "icon": "dist/assets/icon.icns",
        "hardenedRuntime": true,
        "gatekeeperAssess": false,
        "entitlements": "contrib/entitlements.mac.inherit.plist",
        "entitlementsInherit": "contrib/entitlements.mac.inherit.plist",
        "target": [
            "dmg",
            "zip"
        ],
        "category": "public.app-category.productivity"
    },
    "dmg": {
        "contents": [
            {
                "x": 110,
                "y": 150
            },
            {
                "x": 240,
                "y": 150,
                "type": "link",
                "path": "/Applications"
            }
        ]
    },
    "nsis": {
        "oneClick": false,
        "perMachine": true,
        "allowToChangeInstallationDirectory": true,
        "deleteAppDataOnUninstall": true,
        "guid": "4766ac7c-fc9f-11ea-adc1-0242ac120002",
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true,
        "license": "dist/assets/license.txt"
    },
    "msi": {
        "warningsAsErrors": false
    },
    "extraResources": [
        "daemon/**/*",
        "dist/assets/exos/icon-tray.ico",
        "dist/assets/exos/logo-tray.png",
        "dist/assets/license.txt"
    ]
}
